{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SPASS",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.spass",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.other.spass",
			"begin": "{\\*",
			"end": "\\*}"
		},
		"comments": {
			"name": "comment.line.percentage",
			"begin": "%",
			"end": "$"
		}
	},
	"scopeName": "source.spass"
}
