{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SPASS",
	"patterns": [
		{ "include": "#problem" },
		{ "include": "#lists" },
		{ "include": "#operators" },
		{ "include": "#strings" },
		{ "include": "#comments" }
	],
	"repository": {
		"problem": {
			"name": "keyword",
			"match": "\\b(begin_problem|end_problem)\\b"
		},
		"lists": {
			"name": "keyword",
			"match": "\\b(list_of_descriptions|list_of_symbols|list_of_declarations|list_of_formulae|list_of_clauses|list_of_settings|end_of_list)\\b"
		},
		"operators": {
			"name": "keyword.operator.spass",
			"match": "\\b(not|and|or|implies|equiv|forall|exists)\\b"
		},
		"strings": {
			"name": "string.other.spass",
			"begin": "{\\*",
			"end": "\\*}"
		},
		"comments": {
			"name": "comment.line.percentage",
			"begin": "%",
			"end": "$"
		}
	},
	"scopeName": "source.spass"
}
