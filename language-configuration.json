{
    "comments": {
        "lineComment": "%"
    },
    // symbols used as brackets
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        // strings
        ["{", "}"],
        ["*", "*"],
        // brackets
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        // strings
        ["{", "}"],
        ["*", "*"],
        // brackets
        ["[", "]"],
        ["(", ")"]
    ],
    "folding": {
        "markers": {
            "start": "^\\b(begin_problem|list_of_descriptions|list_of_symbols|list_of_declarations|list_of_formulae|list_of_clauses|list_of_settings)\\b",
            "end": "^\\b(end_problem|end_of_list)\\b"
        }
    }
}